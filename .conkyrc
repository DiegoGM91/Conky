$alignc           ${exec sensors|grep 'Core 3'|awk '{print $3}'} $alignr ${freq_g 4} GHz            ${cpu cpu4} % 
CPU4:  ${cpubar cpu4}
$alignc           ${exec sensors|grep 'Core 4'|awk '{print $3}'} $alignr ${freq_g 5} GHz            ${cpu cpu5} % 
CPU5:  ${cpubar cpu5}
$alignc           ${exec sensors|grep 'Core 5'|awk '{print $3}'} $alignr ${freq_g 6} GHz            ${cpu cpu6} % 
CPU6:  ${cpubar cpu6}
$alignc           ${exec sensors|grep 'Core 6'|awk '{print $3}'} $alignr ${freq_g 7} GHz            ${cpu cpu7} %
CPU7:  ${cpubar cpu7}
$alignc           ${exec sensors|grep 'Core 7'|awk '{print $3}'} $alignr ${freq_g 8} GHz            ${cpu cpu8} %
CPU8:  ${cpubar cpu8}
$alignc           ${exec sensors|grep 'Core 8'|awk '{print $3}'} $alignr ${freq_g 9} GHz            ${cpu cpu9} %
